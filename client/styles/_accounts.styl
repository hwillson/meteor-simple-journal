#login-buttons
  a
    text-decoration none
    font-size 1em
  .login-button
    background-color $colorContent
    border 1px solid $colorContent
    border-radius 0
    margin-top: 10px;
    margin-bottom: 20px;
  .login-button:hover
    background-color $colorButtonHover
  input[type=text],input[type=email],input[type=password]
    border-radius 0

.accounts-dialog
  margin-top 5px
  border-radius 0
  box-shadow none
  border 1px solid $colorContent
  text-align left
  .login-button
    background-color $colorContent
    border 1px solid $colorContent
    border-radius 0
  .login-button:hover
    background-color $colorButtonHover
  label
    font-weight bold
  input[type=text],input[type=email],input[type=password]
    border-radius 0
